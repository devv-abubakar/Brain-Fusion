<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/rules_text_bg"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/main_color"
        app:cardCornerRadius="12dp"
        app:strokeColor="@android:color/transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/rule_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-black"
                android:text="@string/rule_title"
                android:textAlignment="center"
                android:textColor="#B9FFFFFF"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/rule_description_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rule_title_text"
                android:layout_centerHorizontal="true"
                android:layout_margin="15sp"
                android:text="@string/rule_description"
                android:textAlignment="center"
                android:textColor="#B9FFFFFF"
                android:textSize="15sp" />


        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>


</RelativeLayout>